    /**
     * Delete a {{ entity }} entity.
     *
     * @ApiDoc(
     *   resource = true,
     *   section = "{{ bundle }}",
     *   description = "Delete a {{ entity }} entity.",
     *   statusCodes = {
     *     204 = "Returned when successful",
     *     500 = "Returned when error"
     *   }
     * )
     *
     * @View(statusCode=204)
     *
     * @param Request $request
     * @param $entity
     *
     * @return Response
     */
    public function deleteAction(Request $request, {{ entity }} $entity)
    {
        try {
            $em = $this->getDoctrine()->getManager();
            $em->remove($entity);
            $em->flush();

            return null;
        } catch (\Exception $e) {
            return $this->view($e->getMessage(), 500);
        }
    }
